<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:background="#B6B4B4">

        <TextView
            android:layout_width="377dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:text="EXPENSE DETAILS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:padding="20dp"
        android:id="@+id/firstLay"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="341dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Date: "
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_selected_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/sel"
                android:text="hello world "
                android:textColor="@color/purple_500"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="28dp"
                android:backgroundTint="#EFCACA"
                android:clickable="true"
                android:rotationX="8"
                app:srcCompat="@android:drawable/ic_menu_edit" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:imeOptions="actionNext"
         />

    <TextView
        android:id="@+id/expense_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"

         />
</LinearLayout>
    <LinearLayout
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense Amount"

        />

        <TextView
            android:id="@+id/expense_value"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:text="Expense Discription" />

        <TextView
            android:id="@+id/expense_discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expense Discription"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cancel_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="135dp"
            android:layout_marginEnd="151dp"
            android:layout_marginBottom="23dp"
            android:background="#B6B4B4"
            android:text="cancel"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>